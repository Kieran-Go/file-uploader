generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id         String   @id @default(cuid())
  sid        String   @unique
  data       String
  expiresAt  DateTime

  @@map("sessions") // Optional: map to a specific DB table name
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String

  @@map("users") // maps model to `users` table
}